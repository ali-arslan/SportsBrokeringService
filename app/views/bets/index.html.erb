<h1>Listing bets</h1>

<table>
  <tr>
    <th>Userid</th>
    <th>Teamid</th>
    <th>Value</th>
    <th>Timestamp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%= bet.userid %></td>
    <td><%= bet.teamid %></td>
    <td><%= bet.value %></td>
    <td><%= bet.timestamp %></td>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

